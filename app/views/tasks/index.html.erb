<h1>Listing tasks</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Start at</th>
      <th>Active</th>
      <th>Recurs amount</th>
      <th>Recurs type</th>
      <th>Tolerance amount</th>
      <th>Tolerance type</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= task.title %></td>
        <td><%= task.start_at %></td>
        <td><%= task.active %></td>
        <td><%= task.recurs_amount %></td>
        <td><%= task.recurs_type %></td>
        <td><%= task.tolerance_amount %></td>
        <td><%= task.tolerance_type %></td>
        <td><%= task.user_id %></td>
        <td><%= link_to 'Show', task %></td>
        <td><%= link_to 'Edit', edit_task_path(task) %></td>
        <td><%= link_to 'Destroy', task, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

